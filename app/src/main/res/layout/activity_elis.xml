<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_elis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabriel.app_gabo.Elis">

    <Button
        android:id="@+id/btnBuscarMapaElis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAzulado"
        android:drawableLeft="@drawable/ic_google_maps"
        android:drawablePadding="8dp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:text="Buscar en Mapas" />

    <Button
        android:id="@+id/btnElisPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorWeb"
        android:drawableLeft="@drawable/web"
        android:drawablePadding="8dp"
        android:paddingLeft="37sp"
        android:paddingRight="37sp"
        android:text="Visitar Pagina"
        android:layout_toRightOf="@+id/btnBuscarMapaElis"
        android:layout_toEndOf="@+id/btnBuscarMapaElis" />

    <Button
        android:id="@+id/btnPedidoElis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBuscarMapaElis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroundComidaRapida"
        android:drawableLeft="@drawable/ic_emoticon_happy"
        android:drawablePadding="8dp"
        android:text="HACER PEDIDO" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Pizza"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerPizzaElis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp" />

    <Spinner
        android:id="@+id/spinnerSaborClasicoElis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerPizzaElis"
        android:layout_marginTop="12dp"
        android:text="Sabor de Pizza"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerSaborPremiumElis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerSaborClasicoElis"
        android:layout_marginTop="14dp" />

    <Spinner
        android:id="@+id/spinnerSaborGourmetElis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerSaborPremiumElis"
        android:layout_marginTop="12dp" />

</RelativeLayout>
