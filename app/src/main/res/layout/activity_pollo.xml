<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pollo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabriel.app_gabo.Pollo"
    android:background="@drawable/blanco">

    <Button
        android:text="Visitar Pagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/btnPolloPagina"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Buscar en Mapas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscarMapaPollo"
        android:layout_alignBaseline="@+id/btnPolloPagina"
        android:layout_alignBottom="@+id/btnPolloPagina"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/SpinnerPollo"
        android:layout_below="@+id/lblPollo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="POLLO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/lblPollo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    <TextView
        android:text="HAMBURGUESAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SpinnerPollo"
        android:layout_alignStart="@+id/lblPollo"
        android:layout_marginTop="12dp"
        android:id="@+id/lblHamPollo" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblHamPollo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/SpinnerHam" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblExtrasPollo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/SpinnerExtras" />

    <TextView
        android:text="EXTRAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/lblExtrasPollo"
        android:layout_below="@+id/SpinnerHam"
        android:layout_alignStart="@+id/lblHamPollo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imagen_pollo"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btnPolloPagina" />

    <Button
        android:text="HACER PEDIDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:id="@+id/btnPedidoPollo"
        android:layout_above="@+id/btnPolloPagina"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imagen_extras"
        android:layout_alignTop="@+id/lblExtrasPollo"
        android:layout_alignStart="@+id/imagen_pollo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imagen_hamburguesa"
        android:layout_alignTop="@+id/lblHamPollo"
        android:layout_alignStart="@+id/imagen_pollo" />

</RelativeLayout>
