<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pollo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blanco"
    android:backgroundTint="?android:attr/textColorPrimaryInverse"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabriel.app_gabo.Pollo">

    <Spinner
        android:id="@+id/SpinnerPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lbPollo"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/lbPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="POLLO"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblHamPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lbPollo"
        android:layout_below="@+id/SpinnerPollo"
        android:layout_marginTop="12dp"
        android:text="HAMBURGUESAS"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/SpinnerHam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblHamPollo"
        android:layout_marginTop="18dp" />

    <Spinner
        android:id="@+id/SpinnerExtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblExtrasPollo"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/lblExtrasPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblHamPollo"
        android:layout_below="@+id/SpinnerHam"
        android:layout_marginTop="18dp"
        android:text="EXTRAS"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imagen_pollo"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnPolloPagina"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imagen_extras"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagen_pollo"
        android:layout_alignTop="@+id/lblExtrasPollo" />

    <ImageView
        android:id="@+id/imagen_hamburguesa"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagen_pollo"
        android:layout_alignTop="@+id/lblHamPollo" />

    <Button
        android:id="@+id/btnBuscarMapaPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnPolloPagina"
        android:layout_toStartOf="@+id/btnPolloPagina"
        android:background="@color/colorAzulado"
        android:drawableLeft="@drawable/ic_google_maps"
        android:drawablePadding="8dp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:text="Buscar Mapas" />

    <Button
        android:id="@+id/btnPolloPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorWeb"
        android:drawableLeft="@drawable/web"
        android:drawablePadding="8dp"
        android:paddingLeft="37sp"
        android:paddingRight="37sp"
        android:text="Visitar Pagina" />

    <Button
        android:id="@+id/btnPedidoPollo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBuscarMapaPollo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroundComidaRapida"
        android:drawableLeft="@drawable/ic_emoticon_happy"
        android:drawablePadding="8dp"
        android:text="HACER PEDIDO" />


</RelativeLayout>
