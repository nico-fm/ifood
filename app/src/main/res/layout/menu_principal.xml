<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/comidafondo"
    android:padding="10sp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabriel.app_gabo.MainActivity">

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:drawableLeft="@drawable/ic_pizza"
        android:drawablePadding="8dp"
        android:id="@+id/btnComidaRapida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/backgroundComidaRapida"
        android:padding="15dp"
        android:text="COMIDA RAPIDA"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textColor="@color/colorNegro"
        android:textScaleX="1.5" />


    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorNegro"
        android:drawableLeft="@drawable/ic_food_apple"
        android:drawablePadding="8dp"
        android:id="@+id/btnVegetariana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/colorVerdeSuave"
        android:padding="15dp"
        android:text="Comida Vegetariana"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/btnComidaRapida"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorNegro"
        android:drawableLeft="@drawable/ic_emoticon_happy"
        android:drawablePadding="8dp"
        android:id="@+id/btnPromociones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnVegetariana"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/colorRosado"
        android:padding="15dp"
        android:text="Promociones"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:drawableLeft="@drawable/ic_google_maps"
        android:drawablePadding="8dp"
        android:textColor="@color/colorNegro"
        android:id="@+id/btnBuscarRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPromociones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/colorAzulado"
        android:padding="15dp"
        android:text="Buscar Restaurant"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:layout_toEndOf="@+id/btnFavoritos"
        android:background="@android:color/holo_blue_light"
        android:padding="10sp"
        android:text="Cerrar Sesion"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:textColorHighlight="@color/cast_expanded_controller_ad_container_white_stripe_color"
        android:textColorHint="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColorLink="?android:attr/fastScrollTextColor" />
</RelativeLayout>
