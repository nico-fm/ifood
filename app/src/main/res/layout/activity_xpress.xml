<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xpress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabriel.app_gabo.Xpress">

    <Button
        android:id="@+id/btnBuscarMapaXpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnXpressPagina"
        android:layout_toStartOf="@+id/btnXpressPagina"
        android:background="@color/colorAzulado"
        android:drawableLeft="@drawable/ic_google_maps"
        android:drawablePadding="8dp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:text="Buscar en Mapas" />

    <Button
        android:id="@+id/btnXpressPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/Xpressbg"
        android:layout_toRightOf="@+id/Xpressbg"
        android:background="@color/colorWeb"
        android:drawableLeft="@drawable/web"
        android:drawablePadding="8dp"
        android:paddingLeft="37sp"
        android:paddingRight="37sp"
        android:text="Visitar Pagina" />

    <Button
        android:id="@+id/btnPedidoXpress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBuscarMapaXpress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroundComidaRapida"
        android:drawableLeft="@drawable/ic_emoticon_happy"
        android:drawablePadding="8dp"
        android:text="HACER PEDIDO" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Hamburguesas"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/Xpressbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnBuscarMapaXpress"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/btnBuscarMapaXpress"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/Xpressbg"
        android:text="Alitas"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/xpressAlitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="18dp"></Spinner>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/xpressAlitas"
        android:layout_alignLeft="@+id/xpressAlitas"
        android:layout_alignRight="@+id/xpressAlitas"
        android:layout_alignStart="@+id/xpressAlitas"
        android:layout_below="@+id/xpressAlitas"
        android:layout_marginTop="12dp"
        android:text="Sandwiches"
        android:textSize="24sp" />

    <Spinner

        android:id="@+id/xpressSandwiches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/xpressSandwiches"
        android:layout_alignLeft="@+id/xpressSandwiches"
        android:layout_alignRight="@+id/xpressSandwiches"
        android:layout_alignStart="@+id/xpressSandwiches"
        android:layout_below="@+id/xpressSandwiches"
        android:text="Salsas"
        android:textSize="24sp" />

    <Spinner

        android:id="@+id/xpressSalsas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7" />


</RelativeLayout>
